@model HotelModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<h3>Create a hotel for a hotel chain</h3>

@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-success">
        @TempData["message"];
    </div>
}
@using (Html.BeginForm("Save", "HotelChain", FormMethod.Post, new { @class="row" }))

{
    @Html.ValidationSummary(true)
    <div class="form-group col-sm-12 col-md-6">
        <label for="name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group col-sm-12 col-md-6">
        <label for="city">City</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City)
    </div>
    <div class="form-group col-sm-12 col-md-6">
        <label for="address">Address</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address)
    </div>
    <div class="form-group col-sm-12 col-md-6">
        <label for="hotelChainIdentifier">Hotel chain identifier</label>
        @Html.TextBoxFor(m => m.HotelChainIdentifier, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HotelChainIdentifier)
    </div>
    <div class="col-md-12">
        <button type="submit" class="btn btn-success pull-right">Create</button>
    </div>
}
